.banner-img {
  width: 100%;
}
.banner-header {
  margin: 10rpx 35rpx 10rpx;
  flex-direction: row;
  color: #fff;
}
.header-title {
  font-size: 33rpx;
}
.header-sub-title {
  font-size: 22rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
}
.search-input-wrapper {
  position: absolute;
  z-index: 10;
  top: 100rpx;
  width: 100%;
}
.search-input-icon {
  position: absolute;
  z-index: 10;
  left: 60rpx;
  top: 106rpx;
  font-size: 30rpx;
