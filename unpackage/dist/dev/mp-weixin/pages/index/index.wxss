  height: 70rpx;
  margin: 20rpx auto;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.uni-input-placeholder {
  color: #666;
  font-size: 28rpx;
}
.nav0-bg {
  background-image: linear-gradient(to bottom, #0051ad, rgba(255, 255, 255, 0.8));
}
.nav1-bg {
  background-image: linear-gradient(to bottom, #929280, rgba(255, 255, 255, 0.8));
}
.nav2-bg {
  background-image: linear-gradient(to bottom, #f7bb5b, rgba(255, 255, 255, 0.8));
}
.nav3-bg {
  background-image: linear-gradient(to bottom, #65870c, rgba(255, 255, 255, 0.8));
}
.qu-bar,
.line-bar {
  background-color: rgba(255, 255, 255, 0.8);
}
.notice-bar {
  margin-top: 20rpx;
}
.notice-bar-wrapper {
  color: #fff;
  font-size: 28rpx;
  background: rgba(230, 230, 230, 0.15);
  border-radius: 30rpx;
  width: calc(100% - 70rpx);
  height: 65rpx;
  margin: 0rpx auto 10rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 30rpx;
