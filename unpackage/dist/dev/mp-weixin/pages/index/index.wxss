}
.nav-image-wrapper {
  flex-direction: row;
  margin: 10rpx 35rpx 10rpx;
}
.nav-image-item-view {
  flex: 1;
  margin: 0rpx 0;
  border-radius: 30rpx;
  width: 46%;
}
.nav-image-item-view + .nav-image-item-view {
  margin-left: 4%;
