/* 红色按钮样式 */
.red-button {
  background-color: #ff962c;
  color: #ffffff;
  /* 白色文字 */
  border: 3px solid #ff8419;
  /* 红色边框 */
  border-radius: 10rpx;
  /* 圆角 */
  padding: 0rpx 5rpx;
  /* 内边距 */
  font-size: 16rpx;
  /* 文字大小 */
  font-weight: bold;
  /* 加粗 */
  /* 其他样式，如过渡效果等 */
  transition: background-color 0.3s;
  /* 背景颜色过渡效果 */
  width: 80%;
}

/* 按钮点击后的样式变化 */
.red-button:active {
  background-color: #ff0000;
  /* 按钮按下时的背景颜色 */
}
